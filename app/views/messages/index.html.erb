<%=content_for :head do %>
  <%= stylesheet_link_tag 'jquery/jquery-ui.min', :media => 'screen, projection'%>
  <%= javascript_include_tag "jquery-ui.min", :cache => true %>
<%end%>

<% @body_class = "home"%>

<%=content_for :header do%>
  <%= render :partial => "navigation" %>
<%end%>
<%= render :partial => "statistics" %>

		<section>
			<div id="toggle-view">
				<%=link_to "Not Sent", messages_path(:sent => false)%>
        		<%=link_to "Sent", messages_path(:sent => true)%>
			</div>
			
      <section id="index">
        <%=render :partial => "index_messages", :locals => {:current_user => current_user, :messages => @messages}%>
        </section>
		</section>
		
		<%= render :partial => "sidebar" %>
		
